<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@mipmap/ic_icon"
            android:layout_marginTop="@dimen/config_margin_10dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="22dp"
            android:layout_width="134dp"
            android:layout_height="134dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="43dp"
            android:layout_margin="@dimen/config_margin_20dp"
            android:orientation="vertical">
            <TextView
                android:text="Susie"
                android:layout_marginTop="@dimen/config_margin_20dp"
                android:textSize="28sp"
                android:textColor="@color/mine_name_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="联系电话: 123456789"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/margin12"
                android:textColor="@color/mine_email_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="联系邮箱: 1234567@qq.com"
                android:textSize="14sp"
                android:textColor="@color/mine_email_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_modify_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:src="@mipmap/ic_modify"
            android:layout_marginStart="22dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <TextView
            android:text="修改信息"
            android:textColor="@color/mine_name_color"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/ic_right"
            android:layout_weight="0"
            android:layout_marginEnd="32dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@mipmap/ic_friends"
            android:layout_marginStart="22dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <TextView
            android:text="查看好友"
            android:textColor="@color/mine_name_color"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/ic_right"
            android:layout_weight="0"
            android:layout_marginEnd="32dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@mipmap/ic_comment"
            android:layout_marginStart="22dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <TextView
            android:text="发表的评论"
            android:textColor="@color/mine_name_color"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/ic_right"
            android:layout_weight="0"
            android:layout_marginEnd="32dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@mipmap/ic_love"
            android:layout_marginStart="22dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <TextView
            android:text="我的点赞"
            android:textColor="@color/mine_name_color"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/ic_right"
            android:layout_weight="0"
            android:layout_marginEnd="32dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@mipmap/ic_contact"
            android:layout_marginStart="22dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <TextView
            android:text="联系我们"
            android:textColor="@color/mine_name_color"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/ic_right"
            android:layout_weight="0"
            android:layout_marginEnd="32dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@mipmap/ic_modify"
            android:layout_marginStart="22dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <TextView
            android:text="修改信息"
            android:textColor="@color/mine_name_color"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/ic_right"
            android:layout_weight="0"
            android:layout_marginEnd="32dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@mipmap/ic_logout"
            android:layout_marginStart="22dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <TextView
            android:text="退出登录"
            android:textColor="@color/mine_name_color"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/ic_right"
            android:layout_weight="0"
            android:layout_marginEnd="32dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
</LinearLayout>