<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:layout_marginTop="@dimen/config_margin_30dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_go_back"
            android:src="@mipmap/ic_back"
            android:layout_marginTop="13dp"
            android:layout_marginStart="10dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            android:text="个人信息"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/login_textView_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:orientation="horizontal">
        <TextView
            android:text="头像"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:layout_marginStart="18dp"
            android:textSize="18sp"
            android:textColor="@color/login_textView_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@mipmap/ic_icon"
            android:layout_weight="0"
            android:layout_marginTop="20dp"
            android:layout_width="89dp"
            android:layout_height="89dp"/>
        <ImageView
            android:src="@mipmap/ic_right"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/config_margin_5dp"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/ll_modify_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">
        <TextView
            android:text="用户名"
            android:textColor="@color/mine_name_color"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginStart="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Susie"
            android:textColor="@color/mine_name_color"
            android:textSize="20dp"
            android:layout_weight="0"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/ic_right"
            android:layout_weight="0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/config_margin_5dp"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">
        <TextView
            android:text="性别"
            android:textColor="@color/mine_name_color"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginStart="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="女"
            android:textColor="@color/mine_name_color"
            android:textSize="20dp"
            android:layout_weight="0"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/ic_right"
            android:layout_weight="0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/config_margin_5dp"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">
        <TextView
            android:text="联系电话"
            android:textColor="@color/mine_name_color"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginStart="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="12345678"
            android:textColor="@color/mine_name_color"
            android:textSize="20dp"
            android:layout_weight="0"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/ic_right"
            android:layout_weight="0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/config_margin_5dp"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">
        <TextView
            android:text="联系邮箱"
            android:textColor="@color/mine_name_color"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginStart="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="123456@qq.com"
            android:textColor="@color/mine_name_color"
            android:textSize="20dp"
            android:layout_weight="0"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/ic_right"
            android:layout_weight="0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:orientation="horizontal">
        <TextView
            android:text="修改密码"
            android:textColor="@color/mine_name_color"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginStart="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/ic_right"
            android:layout_weight="0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
</LinearLayout>